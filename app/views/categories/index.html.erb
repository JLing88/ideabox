<h1>All Categories</h1>

<h3> <%= link_to "Create Category", new_category_path %></h3>
<div>
  <ul>
    <% @categories.each do |category| %>
      <li id="category-<%= category.id %>"> <%= link_to category.title, category_path(category) %> <%= link_to "Delete", category_path(category.id), method: :delete %></li>
    <% end %>
  </ul>
</div>
