<%= form_for @idea do |f| %>
  <ul>
    <% @idea.errors.full_messages.each do |e| %>
      <li> <%= error %> </li>
    <% end %>
  </ul>

  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.submit "Create Idea" %>
  </p>
<% end %>
